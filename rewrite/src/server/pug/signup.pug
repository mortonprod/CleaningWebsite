extends ./layout.pug

block content
  div(class="container")
    h1(class="well") Registration Form
    div(class="col-lg-12 well")
    div(class="row")
      form(id="signupForm" action='/signup', method='POST')
        div(class="col-sm-12")
          div(class="row")
            div(class="col-sm-6 form-group")
              label First Name
              input(name="name" type="text" placeholder="Enter First Name Here.." class="form-control")
            div(class="col-sm-6 form-group")
              label Last Name
              input(type="text" placeholder="Enter Last Name Here.." class="form-control")
          div(class="form-group")
            label Address
            textarea(placeholder="Enter Address Here.." rows="3" class="form-control")
          div(class="row")
            div(class="col-sm-4 form-group")
              label City
              input(type="text" placeholder="Enter City Name Here.." class="form-control")
            div(class="col-sm-4 form-group")
              label State 
              input(type="text" placeholder="Enter State Name Here.." class="form-control")
            div(class="col-sm-4 form-group")
              label Zip
              input(type="text" placeholder="Enter Zip Code Here.." class="form-control")
            div(class="row")
              div(class="col-sm-6 form-group")
                label Password
                input(name="password" type="text" placeholder="Enter Designation Here.." class="form-control")
            div(class="col-sm-6 form-group")
              label Company 
              input(type="text" placeholder="Enter Company Name Here.." class="form-control")
        div class="form-group">
          label Phone Number
          input(type="text" placeholder="Enter Phone Number Here.." class="form-control")
        div(class="form-group")
          label Email Address
          input(name="email" type="text" placeholder="Enter Email Address Here.." class="form-control")
        div(class="form-group")
          label Website
          input(type="text" placeholder="Enter Website Name Here.." class="form-control")
        button(type="submit" class="btn btn-lg btn-info") Submit					
